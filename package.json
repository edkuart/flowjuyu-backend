{
  "name": "cortes-marketplace-api-main",
  "version": "1.0.0",
  "description": "Backend API para Cortes Marketplace. RESTful con Express 5, TypeScript, Sequelize y PostgreSQL.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "pnpm run dev:supabase",
    "dev:supabase": "cross-env NODE_EXTRA_CA_CERTS=./config/supabase-ca.crt NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "npx eslint ./src --ext .ts",
    "format": "npx prettier --write ./src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "routes:dump": "curl -s http://localhost:8800/_introspect/routes > routes.json",
    "routes:md": "node scripts/dev/routes-to-md.js > ROUTES.md",
    "routes:scan": "node scripts/dev/scan-routes-to-md.js > ROUTES.md",
    "routes:all": "pnpm run routes:scan && echo '\\n(Generado por escaneo de archivos src/routes)\\n' >> ROUTES.md",
    "db:migrate": "NODE_ENV=development pnpm build && pnpm exec sequelize-cli db:migrate --config config/config.js --env development --migrations-path ./dist/migrations",
    "db:migrate:prod": "NODE_ENV=production pnpm build && pnpm exec sequelize-cli db:migrate --config config/config.js --env production --migrations-path ./dist/migrations",
    "db:migrate:direct": "NODE_ENV=development pnpm build && pnpm exec sequelize-cli db:migrate --url \"$DATABASE_URL_MIGRATIONS\" --migrations-path ./dist/migrations || pnpm exec sequelize-cli db:migrate --url $DATABASE_URL_MIGRATIONS --migrations-path ./dist/migrations",
    "db:migrate:ts": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/sequelize-cli/lib/sequelize db:migrate --migrations-path ./migrations --url \"$DATABASE_URL\"",
    "db:migrate:undo": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/sequelize-cli/lib/sequelize db:migrate:undo --migrations-path ./migrations --url \"$DATABASE_URL\"",
    "db:migrate:undo:all": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./node_modules/sequelize-cli/lib/sequelize db:migrate:undo:all --migrations-path ./migrations --url \"$DATABASE_URL\"",
    "migrate:up": "pnpm run db:migrate:ts",
    "migrate:down": "pnpm run db:migrate:undo",
    "migrate:reset": "pnpm run db:migrate:undo:all && pnpm run db:migrate:ts"
  },
  "keywords": [
    "express",
    "typescript",
    "sequelize",
    "marketplace",
    "postgres",
    "backend"
  ],
  "author": "Equipo Cortes Marketplace",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^13.0.0",
    "zod": "^4.0.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.5",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "express-list-endpoints": "^7.1.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.44.1"
  }
}
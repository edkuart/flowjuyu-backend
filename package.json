{
  "name": "cortes-marketplace-api-main",
  "version": "1.0.0",
  "description": "Backend API para Cortes Marketplace. RESTful con Express 5, TypeScript, Sequelize y PostgreSQL.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "pnpm run dev:supabase",
    "dev:supabase": "cross-env NODE_EXTRA_CA_CERTS=./config/supabase-ca.crt NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",

    "build": "tsc -p tsconfig.build.json",

    "start": "node dist/src/index.js",

    "postinstall": "npm run build",

    "lint": "npx eslint ./src --ext .ts",
    "format": "npx prettier --write ./src",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "express",
    "typescript",
    "sequelize",
    "marketplace",
    "postgres",
    "backend"
  ],
  "author": "Equipo Cortes Marketplace",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "recharts": "^3.7.0",
    "resend": "^6.9.2",
    "sequelize": "^6.37.7",
    "uuid": "^13.0.0",
    "zod": "^4.0.13",

    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.5",
    "@types/pg": "^8.15.4",
    "@types/pino-http": "^6.1.0",
    "@types/react": "^19.2.7",
    "@types/uuid": "^11.0.0",
    "autoprefixer": "^10.4.24",
    "cross-env": "^10.0.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "express-list-endpoints": "^7.1.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "tailwindcss": "3.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.44.1"
  }
}